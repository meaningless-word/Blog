@model IEnumerable<Blog.BLL.DTO.TagDTO>

<div class="container p-3">
  <div class="row pt-4">
    <div class="col-6">
      <h2 class="text-primary">список тэгов</h2>
    </div>
  </div>
  <br />
  @if (Model.Count() > 0)
  {
    <table class="table table-bordered table-striped" style="width:100%">
      <thead>
        <tr>
          <th>Item Name</th>
        </tr>
      </thead>
      <tbody>
        @foreach (var item in Model)
        {
          <tr>
            <td>@item.Name</td>
            <td>
              <div class="w-100 btn-group" role="group">
                <a asp-controller="Tag" asp-action="Update" asp-role-Id="@item.Id" class="btn btn-primary mx-1">Update</a>
                <a asp-controller="Tag" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-1">Delete</a>
              </div>
            </td>
          </tr>
        }
      </tbody>
    </table>
  }
  else
  {
    <p>No items created yet</p>
  }
</div>