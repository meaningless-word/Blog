@model Blog.BLL.DTO.AuthorDTO

<form method="post" asp-action="Create">
  <div class="border p3">
    <div class="form-group row">
      <h2 class="text-black-50 pl-3">Новый пользователь</h2>
    </div>
    <div class="row">
      <div class="col-12">
        <div class="form-group row">
          <div class="col-6">
            <label asp-for="NickName">Ник-нейм</label>
          </div>
          <div class="col-6">
            <input asp-for="NickName" class="form-control" />
            <span asp-validation-for="NickName" class="text-danger"></span>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-8 offset-2 row">
            <div class="col">
              <input type="submit" class="btn btn-info w-75" value="Создать" />
            </div>
            <div class="col">
              <a asp-action="Index" class="btn btn-danger w-75">Назад</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</form>
