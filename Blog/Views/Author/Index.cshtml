@model IEnumerable<Blog.BLL.DTO.AuthorDTO>

<div class="container p-3">
  <div class="row pt-4">
    <div class="col-6">
      <h2 class="text-primary">список авторов</h2>
    </div>
    <div class="col-6 text-right">
      <a asp-controller="Author" asp-action="Create" class="btn btn-primry">новый пользователь</a>
    </div>
  </div>
  <br />
  @if (Model.Count() > 0)
  {
    <table class="table table-borded table-striped" style="width:100%">
      <thead>
        <tr>
          <th>Ник</th>
          <th>Публикаций</th>
          <th>Комментариев</th>
        </tr>
      </thead>
      <tbody>
        @foreach (var item in Model)
				{
          <tr>
            <td>@item.NickName</td>
            <td><a asp-controller="Post" asp-action="Index" asp-route-Id="@item.Id" class="text-md-center">@item.Posts.ToString()</a></td>
            <td>@item.Comments.ToString()</td>
          </tr>
				}
      </tbody>
    </table>
  }
  else
  {
    <p>ничего нет...</p>
  }
</div>